<UserControl x:Class="IShop_Management.Views.Controls.MainMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IShop_Management.Views.Controls"
             mc:Ignorable="d" >
    <Menu x:Name="menuBar">
        <MenuItem Header="Файл">
            <MenuItem x:Name="Export" Header="Экспорт" ></MenuItem>
            <Separator />
            <MenuItem Header="Выход" Click="menuItemExit_Click" ></MenuItem>
        </MenuItem>
        <MenuItem Header="Справка" >
            <MenuItem Header="Содержание" Click="helpItemAbout_Click" />
            <MenuItem Header="О программе" Click="menuItemAbout_Click"/>
        </MenuItem>
    </Menu>
</UserControl>
